load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_test", "go_source")

test_suite(
    name = "cross",
)

go_source(
    name = "cross_src",
    srcs = ["main.go"],
)

go_binary(
    name = "windows",
    basename = "cross_windows",
    embed = [":cross_src"],
    goarch = "amd64",
    goos = "windows",
    pure = "on",
)

go_binary(
    name = "linux",
    basename = "cross_linux",
    embed = [":cross_src"],
    goarch = "amd64",
    goos = "linux",
    pure = "on",
)

go_binary(
    name = "darwin",
    basename = "cross_darwin",
    embed = [":cross_src"],
    goarch = "amd64",
    goos = "darwin",
    pure = "on",
)

go_test(
    name = "cross_test",
    size = "small",
    srcs = ["cross_test.go"],
    data = [
        ":darwin",
        ":linux",
        ":windows",
    ],
)
